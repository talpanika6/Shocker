<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.tal.shocker.view.ShockActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/shockLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_dimen"
        android:background="@color/primery"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:elevation="8dp"

        />




        <RelativeLayout
            android:layout_marginTop="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="100dp"
                android:textColor="@color/dark_gray"
                android:text="Say Cheese..."
                android:textSize="30sp"
                />

            <ImageView
                android:id="@+id/shock_photo_big"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

        </RelativeLayout>

    <com.example.tal.shocker.Utility.AutoFitTextureView
        android:id="@+id/texture_shock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:gravity="bottom|start"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/send_shock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:layout_anchorGravity="bottom|right|end"

        android:src="@drawable/ic_done_white_24dp"
        android:layout_margin="@dimen/fab_margin"
        />
</RelativeLayout>
