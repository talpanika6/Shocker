<?xml version="1.0" encoding="utf-8"?>




        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background_material_light"
           >


         <ImageView
                android:id="@+id/icon_big"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"

                />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                card_view:matProg_barColor="#00BCD4"
                card_view:matProg_progressIndeterminate="true" />
            <ImageView
                android:id="@+id/feed_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/overflow"
                android:gravity="start|center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                />
                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/overflow"
                    android:gravity="start|center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_room_black_18dp"
                    />
                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="35dp"
                    android:paddingEnd="@dimen/list_feeds_standard_margin_left"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"

                    android:textColor="@color/black"


                    />
                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="45dp"
                    android:gravity="end"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"

                    android:textColor="@color/black"


                    />

            <TextView
                android:id="@+id/feed_dis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/list_feeds_standard_margin_left"
                android:paddingEnd="@dimen/list_feeds_standard_margin_left"
                android:paddingBottom="5dp"
                android:paddingTop="415dp"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:background="@drawable/button_rect_list_main"

                />

</RelativeLayout>





