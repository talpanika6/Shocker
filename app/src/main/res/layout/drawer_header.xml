<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_image_height"
    android:orientation="vertical"
  >

    <ImageView
        android:id="@+id/drawer_profile"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navdrawer_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_material_design" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawerProfileFace"
        android:layout_width="@dimen/navdrawer_user_picture_size"
        android:layout_height="@dimen/navdrawer_user_picture_size"
        android:layout_marginTop="45dp"
        android:layout_marginStart="@dimen/baseline_start"
        android:layout_marginEnd="0dp"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        app:border_width="2dp"
        app:border_color="@color/white" />


    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtViewEmail"
        android:layout_marginEnd="@dimen/margin_user_layout"
        android:layout_marginStart="@dimen/margin_user_layout"
        android:layout_marginTop="@dimen/margin_user_name"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtViewName"
        android:layout_marginEnd="@dimen/margin_user_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_user_email"
        android:textColor="@android:color/white" />
</RelativeLayout>